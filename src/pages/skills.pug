extends ./common/base.pug


block variables
	- var title = 'Skills';
	- var description = 'Ravshan selimov Portfolio, skills';


append styles
	link(rel="stylesheet" href="/assets/css/skills.css")

append scripts
	script(src="/assets/js/assets/slider.js" defer)
	script(src="/assets/js/includes/skills/Cube.js" defer)
	script(src="/assets/js/skills.js" defer)




block content
	main

		.text
			<span class="code">&lth1&gt</span>
			h1.pre(data-text="My skills")
			<span class="code">&lt/h1&gt</span>

		.cube-wrap
			.cube
				<div class="front">  <img src="assets/images/code-logo/js.png" alt="">     </div>
				<div class="back">   <img src="assets/images/code-logo/github.png" alt="">    </div>
				<div class="left">   <img src="assets/images/code-logo/react.png" alt="">  </div>
				<div class="right">  <img src="assets/images/code-logo/typescript.png" alt=""> </div>
				<div class="top">    <img src="assets/images/code-logo/php.png" alt="">   </div>
				<div class="bottom"> <img src="assets/images/code-logo/gulp.png" alt="">    </div>
			.cube-info Mousedown then Mousemove



		.slider
			.slides

				.slide
					span JavaScript
					img(src="assets/images/code-logo/js.png" alt="")

				.slide
					span TypeScript
					img(src="assets/images/code-logo/typescript.png" alt="")

				.slide
					span React
					img(src="assets/images/code-logo/react.png" alt="")

				.slide
					span Redux
					img(src="assets/images/code-logo/redux.png" alt="")

				.slide
					span Gulp
					img(src="assets/images/code-logo/gulp.png" alt="")

				.slide
					span PHP
					img(src="assets/images/code-logo/php.png" alt="")

				.slide
					span Git
					img(src="assets/images/code-logo/github.png" alt="")

				.slide
					span HTML       
					img(src="assets/images/code-logo/html.png" alt="")

				.slide  
					span PUG       
					img(src="assets/images/code-logo/pug.png" alt="" style=" border-radius: 50% ")
	     
				.slide
					span CSS
					img(src="assets/images/code-logo/css.png" alt="")
	     
				.slide
					span SASS
					img(src="assets/images/code-logo/sass.png" alt="")

	     
