doctype html
html(lang='ru_RU')
	block variables
	head

		meta(charset='UTF-8')
		meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
		meta(http-equiv='X-UA-Compatible' content='IE=Edge')

		title #{title}
		meta(name='description' content=`${description}`)
		meta(name='Author' content='_blank, Selimov Ravshan')
		meta(name='Copyright' content='Selimov Ravshan')

		link(rel='icon' href='/favicon.ico')
		link(rel='icon' href='/favicon.png')
		link(rel='apple-touch-icon' href='/favicon.png')


		block styles
			link(rel='stylesheet' href='/assets/css/assets/reset.css')
			link(rel='stylesheet' href='/assets/font-awesome/css/font-awesome.min.css')
			link(rel='stylesheet' href='/assets/css/assets/preloader.css')

		block scripts
			script(src='/assets/js/assets/createAnimateText.js' defer)
			script(src='/assets/js/main.js' defer)

	body

		include ./preloader.pug
		include ./header_footer.pug


		.wrap
			<div class="body-start-text code">  &ltbody&gt</div>

			.content
				block content

			<div class="body-end-text code">  &lt/body&gt<br>&lt/html&gt</div>
